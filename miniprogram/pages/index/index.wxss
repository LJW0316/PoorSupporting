/**index.wxss**/

page {
  background-image: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

form{
  width: 100%;
  height: 350px;
  margin: 10px;       
}
input{
  height: 35px;
  margin: 20px;
  background-color: #ffffff00;
  border-bottom:2px solid white;
  color: white;
}
.lineLayout{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: black;
  font-size: 16px;
  font-family: 宋体;
}
.notice{
  margin: 10px 20rpx;
  padding: 20px;
  border: 1px solid black;
  font-family: 幼圆;
  background-color: #00000060;
  /* color: white; */
}
.box{
  margin: 250rpx 20rpx;       
  padding: 20rpx;
  /* background-color: #00000060; */
}
button{
  background-image: linear-gradient(to right, #74ebd5 0%, #9face6 100%);
  border-radius: 15px;
}
.inputPlaceholder{
  color: rgb(0, 0, 0);
  font-size: 14px;
  font-family: 幼圆;
}
.title{
  font-size: 25px;
  font-family: 宋体;
  text-align: center;
  margin-bottom: 15px;
  color:black;
  font-weight: bold;
}
.textBox{
  margin-top: 200px;
  float: bottom;
}